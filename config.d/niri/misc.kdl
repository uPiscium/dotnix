environment {
  GDK_SCALE 2
  XCURSOR_SIZE 16
}

overview {
    workspace-shadow {
        softness 40
        spread 10
        offset x=0 y=10
        color "#00000050"
    }
}

cursor {
    xcursor-theme "breeze_cursors"
    xcursor-size 48

    hide-when-typing
    hide-after-inactive-ms 1000
}

clipboard {
    disable-primary
}

prefer-no-csd
screenshot-path "~/Pictures/screenshots"
